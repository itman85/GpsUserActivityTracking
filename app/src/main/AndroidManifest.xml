<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="phannguyen.com.gpsuseractivitytracking">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".TestService" android:stopWithTask="false" />
        <service android:name=".ActivitiesTransitionRequestUpdateService" android:process=":kernel"/>
        <service android:name=".LocationRequestUpdateService"/>
        <service android:name=".TestGPSLocationTrackingService" android:process=":geo"/>
        <service android:name=".GeofenceTransitionsIntentService"/>
        <service android:name=".GeofencingRequestService"/>
        <service
            android:name=".jobs.LocationTrackingJobIntentService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />
        <receiver android:name=".TransitionTrackingReceiver" android:exported="false">
            <intent-filter>
                <action android:name="${applicationId}.TRANSITIONS_RECEIVER_ACTION" />
            </intent-filter>
        </receiver>
        <receiver android:name=".LocationTrackingReceiver" android:exported="false">
            <intent-filter>
                <action android:name="${applicationId}.LOCATION_UPDATE_RECEIVER_ACTION" />
            </intent-filter>
        </receiver>
        <receiver android:name=".GeofenceTransitionReceiver" android:exported="false">
            <intent-filter>
                <action android:name="${applicationId}.GEOFENCING_TRANSITION_RECEIVER_ACTION" />
            </intent-filter>
        </receiver>
        <receiver android:name=".jobs.LocationTriggerReceiver"></receiver>
    </application>

</manifest>